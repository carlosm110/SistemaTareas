@model IEnumerable<SistemaTareas.model.HistorialTarea>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CampoModificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorAnterior)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorNuevo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCambio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CambiadoPor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CampoModificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorAnterior)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorNuevo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCambio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarea.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CambiadoPor.ContrasenaHash)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HistorialId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HistorialId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HistorialId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
